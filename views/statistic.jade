extends layout

block content
  .right_col(role='main')
    div
      .page-title
        .title_left
          h3=title
        .title_right
          .col-md-5.col-sm-5.col-xs-12.form-group.pull-right.top_search
            .input-group
              form(action='/search', style="display: inline-table;")
                input.form-control(name='SearchStr' type='text', placeholder='Поиск...')
                span.input-group-btn
                  button.btn.btn-default(type='button') Go!
      .clearfix
      .row
        .col-md-12.col-sm-12.col-xs-12
          .x_panel
            .x_title
              h2 #{title}
              .clearfix
            //Основной контент
            .x_content


              .table-responsive
                table.table.table-striped.jambo_table.bulk_action
                  thead
                    tr.headings
                      th
                      th.column-title Пользователь
                      th.column-title Число закрытых задач
                  tbody
                    each doc,i in docs
                     tr(class=(i % 2 == 0) ? 'odd.pointer' : 'even.pointer')
                     td
                       td=doc.UserName[0].LName
                       td=doc.total
